<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.example.android.justjava.OrderResume">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_resumeorder"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/lbl_white"/>


    <TextView
        android:id="@+id/expresso_order_text_view"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="Expresso: 6 unidades"/>

    <TextView
        android:id="@+id/blackcoffe_order_text_view"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="Black Coffe: 6 unidades"/>

    <TextView
        android:id="@+id/capuccino_order_text_view"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="Capuccino: 6 unidades"/>

    <TextView
        android:id="@+id/milkcoffe_order_text_view"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="CafÃ© com leite: 6 unidades"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lbl_white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="Valor Total"/>

    <TextView
        android:id="@+id/total_order_text_view"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="R$ 18.50"/>

    <Button
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/btn_confirm"
        android:layout_gravity="center"
        android:textColor="@color/text_color"
        android:onClick="confirmButton" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.android.justjava.LastActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_done"
        android:textColor="@color/lbl_white"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/thankmessage_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:text="Obrigado NANANA e volte Sempre !"
        android:textAlignment="center"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lbl_white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="Valor Total"/>

    <TextView
        android:id="@+id/total_order_text_view"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="R$ 18.50"/>

    <Button
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/btn_mainmenu"
        android:layout_gravity="center"
        android:textColor="@color/text_color"
        android:onClick="mainMenu"
        android:clickable="true"/>



</LinearLayout>
